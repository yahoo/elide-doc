<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.url">jdbc:mysql://localhost/elide_demo?serverTimezone=UTC</property>
        <property name="connection.username">elide</property>
        <property name="connection.password">elide123</property>
        <property name="connection.useSSL">false</property>

        <!-- Hibernate settings -->
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <!--<property name="show_sql">true</property>-->
    </session-factory>
</hibernate-configuration>
